<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:baselineAligned="false"
    android:paddingBottom="12dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_counter_ls"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Л/с 6300999534"
            android:textSize="13sp"
            android:gravity="left"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/tv_counter_is_sent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Показания не переданы"
            android:textSize="13sp"
            android:gravity="right"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_counter_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:textColor="@color/wallet_link_text_light"
        android:text="@string/counter_add"/>

    <TextView
        android:id="@+id/tv_counter_change"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:textColor="@color/wallet_link_text_light"
        android:text="@string/counter_change"/>

    <LinearLayout
        android:id="@+id/layout_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_title_icon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/fire"
            android:paddingBottom="7dp"
            android:layout_gravity="center_vertical"
            android:paddingTop="7dp"
            android:background="@drawable/counter_fire_back"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="3dp"
            android:layout_marginLeft="16dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/pole1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="1"
                android:layout_gravity="center_vertical"
                android:singleLine="true"
                android:text="Электроэнергия"
                android:textSize="16sp"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/txt_counter_name_and_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15332440" />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_arrow"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_up"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_counters"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="48dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Предыдущий"/>

            <TextView
                android:id="@+id/pole2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="1111.1"
                android:textSize="13sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_counter_current"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="48dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Текущий"/>

            <TextView
                android:id="@+id/pole3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="1111.1"
                android:textSize="13sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_counter_diff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="48dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Расход"/>

            <TextView
                android:id="@+id/pole4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="1111.1"
                android:textSize="13sp" />

        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="#ECECEC"/>

</LinearLayout>