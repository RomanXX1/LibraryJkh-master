<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="10dp"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:layout_marginTop="10dp">

    <TextView
        android:id="@+id/tv_new_pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Придумайте пароль"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/et_create_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:maxLines="1"
        android:textSize="16sp"
        android:typeface="sans"
        android:textCursorDrawable="@null"
        app:layout_constraintTop_toBottomOf="@+id/tv_new_pass" />

    <ImageView
        android:id="@+id/iv_password_eye"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="4dp"
        android:src="@drawable/ic_password_eye"
        app:layout_constraintBottom_toBottomOf="@+id/et_create_password"
        app:layout_constraintEnd_toEndOf="@+id/et_create_password"
        app:layout_constraintTop_toTopOf="@+id/et_create_password" />

    <TextView
        android:id="@+id/tv_new_pass_repeat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Повторите пароль"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_create_password" />

    <EditText
        android:id="@+id/et_create_password_repeat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:maxLines="1"
        android:textSize="16sp"
        android:typeface="sans"
        android:textCursorDrawable="@null"
        app:layout_constraintTop_toBottomOf="@+id/tv_new_pass_repeat" />

    <ImageView
        android:id="@+id/iv_password_eye_repeat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="4dp"
        android:src="@drawable/ic_password_eye_repeat"
        app:layout_constraintBottom_toBottomOf="@+id/et_create_password_repeat"
        app:layout_constraintEnd_toEndOf="@+id/et_create_password_repeat"
        app:layout_constraintTop_toTopOf="@+id/et_create_password_repeat" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="24dp"
        android:text="@string/btn_save"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        app:backgroundTint="@color/button_grey_blue_selector"
        app:layout_constraintBottom_toBottomOf="parent" />

</android.support.constraint.ConstraintLayout>
