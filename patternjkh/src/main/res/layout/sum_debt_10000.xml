<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/orange"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/txt_fio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:text="Чернушевич Яна Игоревна"
            android:textAlignment="center"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/orange"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="8dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Уважаемый собственник!"
            android:textAlignment="center"
            android:textStyle="bold" />

        <TextView
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Сумма к оплате по Вашему лицевому счету на"
            android:textAlignment="center" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="13.10.2019"
                android:textAlignment="textEnd" />

            <TextView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" составляет:"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_marginLeft="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" - за жилищно-коммунальные услуги -"
                android:textAlignment="textEnd" />

            <TextView
                android:id="@+id/txt_sum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" 1397,50 руб."/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="8dp"
            android:text="ООО УК ДОМЖИЛСЕРВИС напоминает Вам, что, в соответствии со ст. 155 Жилищного кодекса РФ, плата за жилое помещение и коммунальные услуги вносится ежемесячно до 10-го числа месяца, следующего за истекшим, если иной срок не установлен договором управления многоквартирным домом или решением общего собрания собственников. На сумму задолженности будут начислены пени за просрочку в соответствии с ч.14 ст. 155 ЖК РФ."
            android:textAlignment="center" />

    </LinearLayout>

</LinearLayout>