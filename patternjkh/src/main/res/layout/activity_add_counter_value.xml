<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:elevation="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/et_add_count_value"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:inputType="numberDecimal"/>

    <TextView
        android:id="@+id/tv_add_count_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:textSize="18sp"
        tools:text="Показания на 12 марта 2019г." />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:background="@color/ligth_grey"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_add_count_counter"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/fire"
            android:paddingBottom="7dp"
            android:paddingTop="7dp"
            android:background="@drawable/counter_fire_back"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_add_count_counter_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@color/black"
                tools:text="Горячая вода, м3"/>

            <TextView
                android:id="@+id/tv_add_count_counter_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="54123401, л/сч 00012371623"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Новые показания"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="24dp"
        android:gravity="center_horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/n_0"
                android:layout_width="25dp"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:background="@drawable/roundrect"
                android:text="0"
                android:textColor="@color/black"
                android:textSize="30sp"/>

            <TextView
                android:id="@+id/n_1"
                android:layout_width="25dp"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:background="@drawable/roundrect"
                android:text="0"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:id="@+id/n_2"
                android:layout_width="25dp"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:background="@drawable/roundrect"
                android:text="0"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:id="@+id/n_3"
                android:layout_width="25dp"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:background="@drawable/roundrect"
                android:text="0"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:id="@+id/n_4"
                android:layout_width="25dp"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:background="@drawable/roundrect"
                android:text="0"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/btn_point"
            android:layout_width="25dp"
            android:layout_height="match_parent"
            android:paddingBottom="0dp"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:gravity="bottom|center_horizontal"
            android:text=","
            android:textColor="@color/black"
            android:textSize="25sp"
            style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/n_1_1"
                android:layout_width="25dp"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:background="@drawable/roundrect"
                android:text="0"
                android:textColor="@color/black"
                android:textSize="30sp"/>

            <TextView
                android:id="@+id/n_1_2"
                android:layout_width="25dp"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:background="@drawable/roundrect"
                android:text="0"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:id="@+id/n_1_3"
                android:layout_width="25dp"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:background="@drawable/roundrect"
                android:text="0"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="24dp"
        android:gravity="center_horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/prev_0"
                android:layout_width="25dp"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:text="0"
                android:textColor="@color/colorTvGrey"
                android:textSize="23sp"/>

            <TextView
                android:id="@+id/prev_1"
                android:layout_width="25dp"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:text="0"
                android:textColor="@color/colorTvGrey"
                android:textSize="23sp"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:id="@+id/prev_2"
                android:layout_width="25dp"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:text="0"
                android:textColor="@color/colorTvGrey"
                android:textSize="23sp"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:id="@+id/prev_3"
                android:layout_width="25dp"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:text="0"
                android:textColor="@color/colorTvGrey"
                android:textSize="23sp"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:id="@+id/prev_4"
                android:layout_width="25dp"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:text="0"
                android:textColor="@color/colorTvGrey"
                android:textSize="23sp"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/btn_point_prev"
            android:layout_width="25dp"
            android:layout_height="match_parent"
            android:paddingBottom="0dp"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:gravity="bottom|center_horizontal"
            android:text=","
            android:textColor="@color/colorTvGrey"
            android:textSize="23sp"
            style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/prev_1_1"
                android:layout_width="25dp"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:text="0"
                android:textColor="@color/colorTvGrey"
                android:textSize="23sp"/>

            <TextView
                android:id="@+id/prev_1_2"
                android:layout_width="25dp"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:text="0"
                android:textColor="@color/colorTvGrey"
                android:textSize="23sp"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:id="@+id/prev_1_3"
                android:layout_width="25dp"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:text="0"
                android:textColor="@color/colorTvGrey"
                android:textSize="23sp"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:gravity="center_horizontal"
        android:text="Предыдущие показания"
        android:textSize="13sp"/>

    <ScrollView
        android:id="@+id/scrollview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_add_count_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Отменить"
                style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"/>

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/btn_add_count_send"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Передать"
                style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"/>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/layout_tech"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/ligth_grey"
        android:orientation="horizontal"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <android.support.v7.widget.CardView
            android:id="@+id/card_view_img_tech"
            style="@style/MainActionCardViewImageStyle">

            <ImageView
                android:id="@+id/img_tech"
                style="@style/MainActionImageStyle"
                android:src="@drawable/ic_message_white" />

        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/tv_tech"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="16dp"
            android:text="Написать в техподдержку"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>