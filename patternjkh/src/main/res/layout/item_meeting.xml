<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="12dp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layout_meeting_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_meeting_item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Ремонт подъезда"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:fontFamily="sans-serif-medium"/>

            <TextView
                android:id="@+id/tv_meeting_item_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textColor="@color/colorTvGrey"
                tools:text="Голосование завершится 15.04.2019"/>

            <TextView
                android:id="@+id/tv_meeting_item_completed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Вы не голосовали"
                android:textColor="@color/red"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_meeting_item_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:visibility="invisible"
            android:src="@drawable/ic_meeting_poll_result"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_navigate_next"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="@color/grey"/>
</LinearLayout>